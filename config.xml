<?xml version='1.0' encoding='utf-8'?>
<widget id="io.onsen.quoteApp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>QuoteApp</name>
    <description>
        Get your inspiration quote every day.
    </description>
    <author email="nicolocarpignoli@gmail.com" href="http://nicolocarpignoli.com">
        Nicol√≤ Carpignoli
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Orientation" value="portrait" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook src="scripts/build.sh" type="before_prepare" />
    <engine name="android" spec="^7.0.0" />
</widget>
